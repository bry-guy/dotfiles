alias vim="nvim"
alias vimdiff="nvim -d"
alias v="nvim"
alias vc="vim-connect"
alias vs="vim-serve"

alias grep="rg"
alias g="git"
alias python="python3"

alias ts="tailscale"
alias tsf="ts-find"

alias ls="LC_COLLATE=C ls --color=auto"
alias hg="history -1 | grep"

alias ignore="vim ~/.config/git/ignore"
alias brew-unlock="rm -rf /usr/local/var/homebrew/locks"
alias nvim-log="~/.local/share/nvim/log"
alias pry-clean="git status | grep 'modified' | awk '{ print \"$2\" }' | xargs gsed -i '/binding.pry/d'"

alias tm="tmux" 
alias tms="tmux new-session -A -t"
alias tmk="tmux kill-session -t"

alias cobra="cobra-cli"

alias wr="wiki root"
alias ww="wiki work"
alias wt="wiki today"
alias wt="wiki brag"

alias cf='cd "$(fd . ~ --type directory --exclude "*Library*" --exclude "*.git" --hidden | fzf)"'

alias d="docker"
alias dc="docker-compose"
alias dp="doppler"
