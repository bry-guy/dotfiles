# commands
alt - return : /usr/bin/login -pfq smith.bryan

## focus window
alt - o : yabai -m window --focus prev
alt - p : yabai -m window --focus next

## rebalance windows
alt - t : yabai -m window --toggle split
alt - b : yabai -m space --balance

## resize spacing
shift + alt - o : yabai -m window --ratio rel:-0.1
shift + alt - p : yabai -m window --ratio rel:0.1

## move window in space
shift + alt - h : yabai -m window --warp west
shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - l : yabai -m window --warp east

## move window to space
shift - f1 : yabai -m window --space 1
shift - f2 : yabai -m window --space 2
shift - f3 : yabai -m window --space 3
shift - f4 : yabai -m window --space 4
shift - f5 : yabai -m window --space 5
shift - f6 : yabai -m window --space 6
shift - f7 : yabai -m window --space 7
shift - f8 : yabai -m window --space 8

## switch to space
f1 : yabai -m space --focus 1
f2 : yabai -m space --focus 2
f3 : yabai -m space --focus 3
f4 : yabai -m space --focus 4
f5 : yabai -m space --focus 5
f6 : yabai -m space --focus 6
f7 : yabai -m space --focus 7
f8 : yabai -m space --focus 8

# spaces
## create new space and move to it 

cmd + alt - n : yabai -m space --create && \
                   index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
                   yabai -m space --focus "${index}"

cmd + alt - x : yabai -m space --destroy 

## quake window
# https://github.com/kovidgoyal/kitty/issues/45#issuecomment-890671721
default < cmd - 0x32 : $HOME/.quake_helper quake
